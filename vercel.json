{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api", "destination": "/api/index.js" },
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/", "destination": "/index.html" },
    { "source": "/:page.html", "destination": "/overedge-web/:page.html" }
  ]
}
