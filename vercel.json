{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node@3" }
  ],
  "routes": [
    { "src": "^/api$", "dest": "/api/index.js" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },

    { "src": "^/style\\.css$", "dest": "/style.css" },
    { "src": "^/script\\.js$", "dest": "/script.js" },

    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/(.*)\\.html$", "dest": "/overedge-web/$1.html" },
    { "src": "^/(.*)$", "dest": "/overedge-web/$1" }
  ]
}
